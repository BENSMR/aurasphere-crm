// deno-lint-ignore-file no-explicit-any
// tsconfig for proper TypeScript support in Deno Edge Functions

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "useDefineForClassFields": true
  }
}
